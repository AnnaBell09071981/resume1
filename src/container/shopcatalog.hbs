                                        <label class="form-check-label">{{filterList.[1].options.[1].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[1].options.[2].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[1].options.[3].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <hr>
                                </div>

                                <div>
                                    <p>{{filterList.[2].title}}</p>
                                </div>
                                <div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[2].options.[0].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[2].options.[1].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[2].options.[2].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[2].options.[3].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[2].options.[4].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <hr>
                                </div>

                                <div>
                                    <p>{{filterList.[3].title}}</p>
                                </div>
                                <div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[3].options.[0].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[3].options.[1].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[3].options.[2].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[3].options.[3].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[3].options.[4].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <hr>
                                </div>

                                <div>
                                    <p>{{filterList.[4].title}}</p>
                                </div>
                                <div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[4].options.[0].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[4].options.[1].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[4].options.[2].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[4].options.[3].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                    <div class="form-check">
                                        <label class="form-check-label">{{filterList.[4].options.[4].value}}</label>
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                </div>

                                {{/with}}

                            </div>

                        </div>

                    </div>

                    <div class="row col-8 mt-5 mb-5">

                        {{#each goodsList}}
                        <div class="col-4 me-5">
                            {{> catalogItem}}
                        </div>
                        {{/each}}

                    </div>

                </div>

            </div>

        </div>



        <div class="card text-bg-success mt-5 mb-5">
            <div class="card-body">
                <div class="text-center">
                    {{#with service}}
                    <div class="card-title">
                        <h2>{{title}}</h2>
                    </div>
                    <div class="text-centr">
                        <p>
                            {{description}}
                        </p>
                    </div>
                    <div class="text-center">
                        <a href="{{buttons.[0].link}}" class="btn btn-primary">{{buttons.[0].text}}</a>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>

    </div>
    <div class="col-12">
        <hr>
    </div>


    <footer class="mt-3">
        <div class="row">
            {{#each footer}}
            <section class="col-2">
                <ul class="nav">
                    {{#each this}}
                    <li class="nav-item">
                        {{#if @last}}
                        <a class="nav-link disabled" href="#">{{text}}</a>
                        {{else}}
                        <a class="nav-link" href="{{link}}">{{text}}</a>
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </section>
            {{/each}}
        </div>

    </footer>
    </div>
</main>


