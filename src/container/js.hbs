{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <section>
        {{> title big=true data="JavaScript"}}


        <div>

            <h2>{{JavaScript}}</h2>
            <p>{{description}}</p>
            {{#with history}}
            <main>
                <section>
                    <p>Year: {{year}}</p>
                    <p>Founder: {{founder}}</p>
                </section>
            </main>
            {{/with}}
            <hr>

            <h3>Types: </h3>

            {{#each types}}
            <main>
                <span class="badge text-bg-info">{{this}}</span>
            </main>
            {{/each}}
            <hr>

            <h3>Syntax: </h3>
            {{#with syntax}}
            <main>
                <h4><em>Variables:</em></h4>
                {{#each variables}}
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
                {{/each}}
                <hr>
                <h4><em>Functions:</em></h4>
                {{#each functions}}
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
                {{/each}}
                <hr>
                <h4><em>Conditionals:</em></h4>
                {{#each conditionals}}
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
                {{/each}}
                <hr>
                <h4><em>Loops:</em></h4>
                {{#each loops}}
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
                {{/each}}
                <hr>
                <h4><em>Classes:</em></h4>
                {{#each classes}}
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
                {{/each}}
            </main>
            {{/with}}
            <hr>

            <h3>Features: </h3>
            {{#each features}}
            <main>
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
            </main>
            {{/each}}
            <hr>

            <h3>Libraries: </h3>
            {{#each libraries}}
            <main>
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
            </main>
            {{/each}}
            <hr>

            <h3>Tools: </h3>
            {{#each tools}}
            <main>
                <div>
                    <ul>
                        <li>{{this}}</li>
                    </ul>
                </div>
            </main>
            {{/each}}
            <hr>

            {{#each community}}
            <main>
                <section>
                    <ul>
                        <li><button type="button" class="btn btn-link">{{name}}</button></li>
                        <li><button type="button" class="btn btn-link">{{type}}</button></li>
                    </ul>
                </section>
            </main>
            {{/each}}
        </div>
    </section>
</div>

