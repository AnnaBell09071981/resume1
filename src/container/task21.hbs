{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<heading>
    <main class="ms-5 ps-5">
        <div class="card mt-5">
            <div class="card-body">
                {{#with heading.main}}
                <h1 class="ms-5">{{title}}</h1>
                <p>{{text}}</p>
                {{#with button_text}}
                <button class="btn btn-primary">{{solid}}</button>
                <br>
                <br>
                <br>
                <button class="btn btn-outline-primary">{{outline}}</button>
                {{/with}}
                {{/with}}
            </div>
        </div>

        <div class="card mt-5">
            <div class="card-body">
                {{#with heading.second}}
                <h2 class="ms-5">{{title}}</h2>
                <p>{{text}}</p>
                {{#with button_text}}
                <button class="btn btn-secondary">{{solid}}</button>
                <br>
                <br>
                <br>
                <button class="btn btn-outline-secondary">{{outline}}</button>
                {{/with}}
                {{/with}}
            </div>
        </div>

        <div class="card mt-5">
            <div class="card-body">
                {{#with heading.subblock}}
                <h3 class="ms-5">{{title}}</h3>
                <p>{{text}}</p>
                {{#with button_text}}
                <button class="btn btn-dark">{{solid}}</button>
                <br>
                <br>
                <br>
                <button class="btn btn-outline-dark">{{outline}}</button>
                {{/with}}
                {{/with}}
            </div>
        </div>

        {{#with nested_display}}
        <div class="display-1 mt-5">{{title}}</div>
        <div class="card my-5">
            <div class="card-body">
                {{#with children_display}}
                <div class="display-4">{{title}}</div>
                <br>
                <br>
                <br>
                <p>{{text}}</p>
                <button class="btn btn-outline-warning">{{button.text}}</button>
                {{/with}}
            </div>
        </div>
        <br>
        <h6>{{header_text}}</h6>
        <br>
        <button class="btn btn-info mb-">{{button.text}}</button>
        {{/with}}

        <div class="mb-5">
            <hr>
        </div>
        <div class="mb-5">
            <hr>
        </div>
        <div>
            {{#with paragraph}}
            <p class="text-uppercase">{{title}}</p>
            <p>{{text}}</p>
            {{#with button}}
            <div>
                <a href="{{url}}" class="btn btn-link">{{text}}</a>
            </div>
            {{/with}}
            <br>
            <div class="card mb-5">
                <div class="card-body">
                    {{#each list_name}}
                    <ul>
                        <li><a href="{{url}}" class="btn btn-link">{{text}}</a></li>
                    </ul>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>


    </main>
</heading>
