{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main class="mt-5 mb-5 ms-5">
    <div>
        {{#with navigation}}
        <section class="row">
            {{#each links}}
            <div class="col-3">
                <a href="{{href}}" class="btn btn-link">{{text}}</a>
            </div>
            {{/each}}
            {{#with button}}
            <div class="col-3">
                <a href="{{href}}" class="btn btn-primary btn-lg">{{text}}</a>
            </div>
            {{/with}}
        </section>
        {{/with}}
    </div>
    <br>
    <hr>
    {{#with header}}
    <section>
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        <a href="{{button.link}}" class="btn btn-primary btn-lg">{{button.text}}</a>
    </section>
    {{/with}}
    <br>
    <hr>


    <h2>{{city.title}}</h2>
    <br>
    {{#with city}}
    <div class="row gx-2 gy-2">
        {{#each cards}}
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <img class="card-img-top" src="{{picture.src}}" alt="{{picture.alt}}">
                    <h3 class="card-title">{{title}}</h3>
                    <p>{{description}}</p>
                    <a href="{{button.href}}" class="btn btn-primary btn-lg">{{button.text}}</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    <section>
        {{#with winner}}
        <h2>{{title}}</h2>
        {{#with table}}
        <table class="table">
            <thead>
                <tr>
                    {{#each head}}
                    <th>
                        {{this}}
                    </th>
                    {{/each}}
                </tr>
            </thead>
            {{#each user}}
            <tbody>

                <tr>

                    <th>{{place}}</th>

                    <td>{{name}}</td>
                    <td>{{surname}}</td>
                    <td>{{nickname}}</td>

                </tr>

            </tbody>
            {{/each}}
        </table>
        {{/with}}
        {{/with}}
    </section>

    <hr>

    {{#with gallery}}
    <h2>{{title}}</h2>
    <div class="row g-5">
        {{#each cards}}
        <div class="col-4">
            <div class="card">
                <div class="card-header">
                    <h4>{{name}}</h4>
                </div>
                {{#each items}}
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>{{this}}</th>
                        </tr>
                    </table>
                </div>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
    <hr>

    {{#with relaxion}}
    <div class="display-3">
        {{title}}
    </div>
    <div class="row g-5">
        {{#each cards}}
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    {{header}}
                </div>
                <div class="card-body">
                    <div class="card-title">
                        {{title}}
                    </div>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}


    <hr>

    {{#with rest}}
    <div class="row">
        {{#each cards}}
        <div class="col-6 g-2">
            <div class="card">
                <div class="card-header text-center">
                    {{header}}
                </div>
                <div class="card-body text-center">
                    <div class="card-title text-center">
                        {{title}}
                    </div>
                    <p>{{description}}</p>
                </div>
                <button class="btn btn-primary text-center">{{button}}</button>
                <div class="card-footer text-center">
                    {{footer}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    <hr>

    {{#with proposition}}
    <div class="display-2">
        {{title}}
    </div>
    <div class="row">
        {{#each card}}
        <div class="col-6 g-3">
            <div class="card text-bg-warning">
                <div class="card-header text-center">
                    {{header}}
                </div>
                <div class="card-body text-center">
                    <div class="card-title text-center">
                        {{title}}
                    </div>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    <hr>



    {{#with footer}}
    <h5>{{title}}</h5>

    <div class="row">
        <div class="col-3 g-3">
            {{#each navigation}}
            <table>
                <tr>
                    <th>

                        <a href="{{href}}" class="btn btn-link">{{text}}</a>

                    </th>
                </tr>
            </table>
            {{/each}}
        </div>
        <div class="col-3 g-3">
            {{#each socialMedia}}
            <table>
                <tr>
                    <th>

                        <a href="{{link}}" class="btn btn-dark">{{name}}</a>

                    </th>
                </tr>
            </table>
            {{/each}}
        </div>
        <div class="col-3 g-3">
            {{#each partners}}
            <table>
                <tr>
                    <th>

                        <a href="{{link}}" class="btn btn-outline-info">{{name}}</a>

                    </th>
                </tr>
            </table>
            {{/each}}
        </div>
    </div>
    {{/with}}
</main>
