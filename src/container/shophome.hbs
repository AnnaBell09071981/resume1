{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main class="p-5">
    {{#with navigation}}
    <div class="card">
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link">{{text}}</a>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </div>

    {{#with newsBlock}}
    <div class="display-3 text-center">
        {{title}}
    </div>
    <div class="row g-2">
        {{#each cards}}
        <div class="col-3">
            <div class="card mb-5">
                <div class="card-header">
                    {{title}}
                    {{#if isTop}}
                    <button class="btn btn-danger rounded-pill mb-2">Top</button>
                    {{/if}} {{#if isNew}}
                    <button class="btn btn-success rounded-pill mb-2">New</button>
                    {{/if}}
                </div>
                <div class="card-body">
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}

    {{#with goodsBlock}}
    <div class="mt-5 mb-5">
        <div class="nav nav-tabs">
            {{#each tabs}}
            <div class="nav-item">
                <p class="nav-link {{#if isActive}} active {{/if}} {{#if isDisabled}} disabled {{/if}}">{{text}}</p>
            </div>
            {{/each}}

        </div>
    </div>

    <div class="mt-5 mb-5">
        <div class="row gx-2 gy-2">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <img class="card-img-top" src="{{image}}" alt="{{image}}">
                        <h4 class="card-title">{{title}}
                            {{#if isHot}}
                            <button class="btn btn-warning rounded-pill mb-2">Top</button>
                            {{/if}} {{#if isNew}}
                            <button class="btn btn-primary rounded-pill mb-2">New</button>
                            {{/if}}
                        </h4>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    {{/with}}

    {{#with subscribe}}
    <div class="card mt-5 mb-5">
        <div class="nav nav-tabs flex-column ps-2">
            <div class="nav-item">
                <h2>{{header}}</h2>
            </div>

            <div class="nav-item">
                <p>{{description}}</p>
            </div>

            <div class="nav-item">
                {{#each buttons}}
                <div>
                    <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
                </div>
                {{/each}}
            </div>

        </div>
    </div>
    {{/with}}

    {{#with service}}
    <div class="card mt-5 mb-5">
        <div class="card-body text-center">
            <div class="text-center">
                <h2>{{title}}</h2>
            </div>

            <div class="text-center">
                <p>{{description}}</p>
            </div>

            <div class="text-center">
                {{#each buttons}}
                <div>
                    <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
                </div>
                {{/each}}
            </div>

        </div>
    </div>
    {{/with}}


    <footer class="mt-3">
        <div class="row">
            {{#each footer}}
            <section class="col-2">
                <ul class="nav">
                    {{#each this}}
                    <li>
                        <a href="{{link}}">{{text}}</a>
                    </li>
                    {{/each}}
                </ul>
            </section>
            {{/each}}
        </div>

    </footer>


</main>

