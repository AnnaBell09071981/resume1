{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="ms-5">
    {{#with main}}
    <main>
        <section>
            {{> title big=true data="Work history"}}


            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (still working)
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>

                        <br>


                        <br>
                        <br>

                        <div><strong>Projects ({{projectAmount}})</strong></div>

                        <br>


                        <ul>

                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                <br>
                                <div>
                                    <p>About:
                                        <br>
                                        <br>
                                        {{about}}
                                    </p>
                                </div>
                            </li>

                            <br>

                            <div>
                                <em>Project stacks ({{stackAmount}})</em>
                                <br>
                            </div>
                            <br>
                            {{#each stacks}}
                            <li>
                                <div>{{name}}</div>
                                <br>
                            </li>
                            {{/each}}

                            <br>

                            <div>
                                <em>Project awards</em>
                            </div>

                            <br>
                            {{#each awards}}
                            <li>
                                <div>{{name}}</div>
                                <br>
                            </li>
                            {{/each}}
                            {{/each}}


                        </ul>
                    </li>

                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

