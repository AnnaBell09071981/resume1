{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<main class="p-5">
    <div class="row">
        <div class="col-12">
            <section>
                <div>
                    {{#with navigation}}
                    <section class="row">
                        {{#each links}}
                        <div class="col-4">
                            {{#if @last}}
                            <a href="#" class="btn btn-link disabled">{{text}}</a>
                            {{else}}
                            <a href="{{href}}" class="btn btn-link">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </section>
                    {{/with}}
                </div>
            </section>



            <section class="mt-5">
                {{#with header}}
                <h1>{{title}}</h1>
                {{#with button}}
                <div class="mt-3 mb-5">
                    <a href="{{link}}" class="btn btn-light">{{text}}</a>
                </div>
                {{/with}}
                {{/with}}
            </section>
            <div>
                <hr>
            </div>
            <section>
                <div class="row">
                    {{#each goodsBlock}}
                    <div class="card mb-4">
                        <div class="card-body row p-2">
                            <div class="col-2">
                                <img src="{{image}}">
                            </div>
                            <div class="col-4 ps-0">
                                <h3 class="card-title mt-2">{{name}}</h3>

                                <div class="mt-1">
                                    {{description}}
                                </div>

                            </div>

                            <div class="col-2">
                                <div class="col-2">{{price.title}}</div>
                                <h3 class="mt-1">{{price.value}}</h3>
                            </div>

                            <div class="col-2">
                                <div class="mt-5">{{amount}}</div>
                            </div>
                            <div class="col-2">
                                {{#each buttons}}
                                <div>
                                    <div class="btn {{#if isPrimary}}
                                        btn-primary{{/if}} {{#if isDanger}}
                                        btn-outline-danger {{/if}} mt-2 mb-2">
                                        {{text}}
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </section>

            <div>
                <hr>
            </div>

            <section>
                {{#with total}}
                <h3 class="mb-3">{{title}}</h3>
                <h2 class="mb-3">{{amount}}</h2>
                <p class="mb-3">{{delivery}}</p>

                {{#each buttons}}
                <div class="row">
                    <div class="col-6 mb-3">
                        {{#if isSuccess}}
                        <a href="{{link}}" class="btn btn-success">{{text}}</a>
                        {{/if}}
                        {{#if isOutline}}
                        <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
                {{/with}}
            </section>
            <div>
                <hr>
            </div>

            <section>
                {{#with goodsOtherBlock}}
                <div>
                    <h2 class="text-center mb-3">{{title}}</h2>
                </div>
                <div class="row g-2">
                    {{#each cards}}
                    <div class="col-4">
                        <div class="card mb-5">
                            <div class="card-body">
                                <img class="card-img-top" src="{{image}}" alt="{{image}}">
                                <div class="card-title">
                                    <h4>{{title}}</h4>
                                    {{#if isHot}}
                                    <button class="btn btn-warning rounded-pill mb-2">Top</button>
                                    {{/if}} {{#if isNew}}
                                    <button class="btn btn-primary rounded-pill mb-2">New</button>
                                    {{/if}}
                                </div>
                                <p>{{description}}</p>
                            </div>
                        </div>

                    </div>

                    {{/each}}
                </div>
                {{/with}}
            </section>

            <section>
                {{#with subscribe}}
                <div class="col-12 mb-5">
                    <div class="alert alert-dark">
                        <h2>{{header}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <div class="col-6 mb-2">
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </section>
            <div class="mt-5">
                <hr>
            </div>
            <footer class="mt-3">
                <div class="row">
                    {{#each footer}}
                    <section class="col-2">
                        <ul class="nav">
                            {{#each this}}
                            <li class="nav-item">
                                {{#if @last}}
                                <a class="nav-link disabled" href="#">{{text}}</a>
                                {{else}}
                                <a class="nav-link" href="{{link}}">{{text}}</a>
                                {{/if}}
                            </li>
                            {{/each}}
                        </ul>
                    </section>
                    {{/each}}
                </div>

            </footer>


</main>

